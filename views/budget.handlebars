
  <div class="dashboard is-full-height">
  
  
  <!-- main section -->
  <div class="dashboard-main is-scrollable">
    <nav class="navbar m-3">
      <div class="navbar-brand">
        <div>
      <img src="../asset/Plutus-logos.jpeg" alt="" class="image is-96x96">
    </div>
        <span class="navbar-item">
           {{!-- <h3 class="">Hello, {{user.name}}! Welcome to Plutus.</h3> --}}
        </span>
      </div>
    </nav>
    <div class="tile is-ancestor">
      <div class="tile is-parent is-3">
    <article class="tile is-child notification has-background-primary-light	">
      <div class="content">
        
        <p class="subtitle ">{{> asideNav}}</p>
        <div class="content">
          <!-- Content -->
        </div>
      </div>
    </article>
  </div>
  <div class="tile is-vertical is-8 ">
    <div class="tile is-parent">
      <article class="tile is-child notification has-background-success		">
        <p class="title has-text-light">The Budget Planner</p>
        <p class="subtitle is-size-6 has-text-light">Planned Bills and Subscriptions</p>
        <div class="content columns is-desktop">
          <!-- Content -->
           
           <span class="column">
            <div class="select">
            <select class=" category ">

              <option value="Mortgage">Mortgage/Rent</option>
              <option value="Water">Water</option>
              <option value="Natual Gas">Natual Gas</option>
              <option value="Electricity">Electricity</option>
              <option value="Internet">Internet</option>
              <option value="Streaming Services">Streaming Services</option>
              <option value="Trash">Trash</option>
              <option value="Phone">Phone</option>
              <option value="Health Insurance">Health Insurance</option>
              <option value="Life Insurance">Life Insurance</option>
              <option value="Auto Insurance">Auto Insurance</option>
              <option value="Gym">Gym</option>
              <option value="Grocery">Grocery</option>
              <option value="Miscellaneous">Miscellaneous</option>
            </select>
            </div>
           </span>
           
            
          <span class="column p-0">
            <input type="number" placeholder="planned" class="amount input" />
          </span>
          
            
          
          <span class="column">
            <button class="button has-background-grey-lighter is-text-light	" id="save-btn">Save</button>
          </span>
       
        </div>
          
        
      </article>
    </div>
    <div class="tile is-parent">
        <article class="tile is-child notification has-background-link-dark	">
          <p class="title has-text-light">Overview</p>
          <p class="subtitle"></p>
          <table class="table is-striped is-fullwidth">
          <tr>
            <th>Category</th>
            <th>Planned</th>
          </tr>
          {{log this}}
          {{#each budgets as |budget|}}
            <tr>
              <td>{{budget.category}}</td>
              <td class="limit_amount">{{budget.limit_amount}} </td>
            </tr>
          {{/each}}
          <tfoot>
            <td>Total</td>
            <td id="total-amount"></td>
          </tfoot>
        </table>
        </article>
      </div>
  </div>
  
  
</div>

    
    

    <!-- the footer will take up all unused space at the bottom -->
    
  </div>
  </div>
  



  






